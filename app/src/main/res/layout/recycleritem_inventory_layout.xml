<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:contentPadding="10dp"
    card_view:cardElevation="2dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="0dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/textview_itemName_inventoryRecyclerview"
        android:text="Item Name"
        android:textColor="@color/normalText"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textview_itemType_inventoryRecyclerview"
        android:text="Item Type"
        android:textColor="@color/normalText"
        android:gravity="center_vertical|right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/textview_itemPower_inventoryRecyclerview"
        android:text="Item Power"
        android:textColor="@color/normalText"
        android:gravity="center_vertical"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textview_itemStat_inventoryRecyclerview"
        android:text="Item Stat Type"
        android:textColor="@color/normalText"
        android:gravity="center_vertical|right" />

        </LinearLayout>

</LinearLayout>

    </android.support.v7.widget.CardView>