<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/fragmentCharacterSelect"
    android:elevation="@dimen/dialogElevation"
    android:background="@color/orange"

    tools:context="FragmentClasses.CharacterSelectFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your name?"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:id="@+id/edittextCharacterSelectFragment"
                android:maxLines="1"
                android:inputType="textCapWords|textNoSuggestions"
                />

                <Button
                    android:layout_width="@dimen/buttonWidthSmall"
                    android:layout_height="@dimen/buttonHeightSmall"
                    android:text="Randomize"
                    android:id="@+id/buttonCharacterSelectFragmentRandomizeName"
                    android:background="@drawable/rounded_button"
                    android:layout_margin="4dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/buttonTextSmall"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rank your skills from best to worst"
                    android:gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonCharacterSelectFragmentTopDown"
                    android:src="@drawable/arrow_down" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/strength"
                    android:gravity="center_horizontal"
                    android:id="@+id/textviewCharacterFragmentTop"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <Space
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonCharacterSelectFragmentMidDown"
                    android:src="@drawable/arrow_down" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/agility"
                    android:gravity="center_horizontal"
                    android:id="@+id/textviewCharacterFragmentMid"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonCharacterSelectFragmentMidUp"
                    android:src="@drawable/arrow_down"
                    android:rotation="180" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/comradery"
                    android:gravity="center_horizontal"
                    android:id="@+id/textviewCharacterFragmentBot"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonCharacterSelectFragmentBotUp"
                    android:src="@drawable/arrow_down"
                    android:rotation="180" />
            </LinearLayout>

            <Button
                android:layout_width="@dimen/buttonWidth"
                android:layout_height="@dimen/buttonHeight"
                android:text="Begin Game"
                android:id="@+id/buttonCharacterSelectFragmentBeginGame"
                android:background="@drawable/rounded_button"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/buttonText"/>

        </LinearLayout>

</FrameLayout>
